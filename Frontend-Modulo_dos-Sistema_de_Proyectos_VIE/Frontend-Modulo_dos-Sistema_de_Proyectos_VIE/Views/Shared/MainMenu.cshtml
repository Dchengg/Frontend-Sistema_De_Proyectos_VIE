<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/BuscadorProyectos.css")
    @Styles.Render("~/Content/SeguimientoProyecto.css")
    @Styles.Render("~/Content/FichaInvestigador.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/all.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    @{var id = "123456789"; }
</head>

<body>
    <nav class="navbar fixed-top flex-md-nowrap fa-align-left">
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-2 text-dark" href="#">Features</a>
            <a class="p-2 text-dark" href="#">Enterprise</a>
            <a class="p-2 text-dark" href="#">Support</a>
            <a class="p-2 text-dark" href="#">Pricing</a>
        </nav>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="sidebar sideMenu mainMenu">
                <img src="~/Assets/TEC-logo-white.png" alt="TEC-logo-white" />
                <ul class="nav nav-sidebar d-flex flex-column">
                    <li class="d-flex flex-row">
                        <a href="/FichaInvestigador/Edit/@id">
                            <span class="fa fa-address-book" aria-hidden="true"></span>
                            Ficha del investigador
                        </a>
                    </li>
                    <li class="d-flex flex-row">
                        <a href="/Convocatoria">
                            <span class="fa fa-calendar" aria-hidden="true"></span>
                            Convocatoria
                        </a>
                    </li>
                    <li class="d-flex flex-row">
                        <a href="#">
                            <i class="far fa-copy"></i>
                            <p>Formulación de propuestas</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Home")">
                            <i class="far fa-calendar-alt"></i>
                            <p>Seguimiento de proyectos</p>
                        </a>
                    </li>
                    <li class="d-flex flex-row">
                        <a href="#">
                            <i class="fas fa-tasks"></i>
                            <p>Evaluaciones</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Reportes","Home")">
                            <i class="far fa-star"></i>
                            <p>Consultas</p>
                        </a>
                    </li>
                    <li class="d-flex flex-row">
                        <a href="#">
                            <i class="fas fa-cog"></i>
                            <p>Configuraciones</p>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="main content-page">
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
  
    @Scripts.Render("~/bundles/custom")
</body>
</html>