<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/BuscadorProyectos.css")
    @Styles.Render("~/Content/SeguimientoProyecto.css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="row">
        <nav style="border-width:0; margin:0" class="navbar navbar-fixed-top">
            <div style="padding-left:0" class="container-fluid">
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Dashboard</a></li>
                        <li><a href="#">Settings</a></li>
                        <li><a href="#">Profile</a></li>
                        <li><a href="#">Help</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="sidebar sideMenu mainMenu">
                <img src="~/Assets/TEC-logo-white.png" alt="TEC-logo-white"/>
                <ul class="nav nav-sidebar">
                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
                            Ficha del investigador
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                            Convocatorias
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-duplicate" aria-hidden="true"></span>
                            Formulación de propuestas
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
                            Seguimiento de proyectos
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-education" aria-hidden="true"></span>
                            Evaluaciones
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                            Reportes
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                            Configuraciones
                        </a>
                    </li>
                </ul>
            </div>
            <div class="main content-page">
                @RenderBody()   
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>