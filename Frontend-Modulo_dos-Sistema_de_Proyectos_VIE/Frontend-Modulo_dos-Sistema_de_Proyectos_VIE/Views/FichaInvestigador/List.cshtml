@model IEnumerable<Frontend_Modulo_dos_Sistema_de_Proyectos_VIE.Models.FichaInvestigador.InvestigadorListarViewModel>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/MainMenu.cshtml";
}

<h2>Investigadores registrados</h2>

<div class="container-fluid p-4 rounded" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); background-color:white; width:100%">
    <table class="table table-striped">
        <thead class="table-heading">
            <tr id="ROW1">
                <th>
                    @Html.DisplayNameFor(model => model.NumeroIdentidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrimerApellido)
                </th>
                <th>
                    @Html.DisplayName("Fotografía")
                </th>
                <th></th>
            </tr>
        </thead>
        

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroIdentidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimerApellido)
                </td>
                <td>
                    @{
                        var base64 = Convert.ToBase64String(item.Fotografia);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <div class="col-md-4">
                        <img src="@imgSrc" class="rounded" alt="Imagen del investigador" width="100" height="100">
                    </div>
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.NumeroIdentidad })
                    @using (Html.BeginForm("Delete", "FichaInvestigador", new { id = item.NumeroIdentidad }))
                    {
                        <input class="btn btn-danger" type="submit" value="Eliminar" onclick="return confirm('Seguro que desea eliminar este investigador?')" />
                    }
                </td>
            </tr>
        }

    </table>
 </div>
