
@{
    ViewBag.Title = "Cronograma";
    Layout = "~/Views/Shared/UIProyectoSideMenu.cshtml";

    IEnumerable<Frontend_Modulo_dos_Sistema_de_Proyectos_VIE.Models.Actividad> actividades = TempData["Actividades"] as IEnumerable<Frontend_Modulo_dos_Sistema_de_Proyectos_VIE.Models.Actividad>;
}

<div style="width:100%">
    <div class="container-fluid">
        <div class="row formRow">
            <div class="form-group col-md-12">
                <label for="nombreProyectoInput">Nombre del proyecto</label>
                <input type="text" class="form-control" id="codigoProyectoInput" value="@ViewData["NombreProyecto"]" disabled />
            </div>
        </div>
        <div class="row formRow">
            <div class="form-inline col-md-8">
                <label for="codigoProyectoInput">Código del proyecto</label>
                <input style="margin-left:5px" type="text" class="form-control" value="@ViewData["CodigoProyecto"]" id="codigoProyecto" disabled />
            </div>
        </div>

        <div class="row formRow">
            <div class="form-group col-md-12">
                <label for="tableCronograma"></label>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered disenoTabla">
                        <tr id="ROW1">
                            <th>Nombre de la actividad</th>
                            <th>Fecha</th>
                            <th>Trimestre</th>
                            <th>Descripción</th>
                            
                        </tr>
                        @foreach(var actividad in actividades){
                            <tr>
                                <th>@actividad.Nombre</th>
                                <th>@actividad.Fecha</th>
                                <th>@actividad.Trimestre</th>
                                <th>@actividad.Descripcion</th>
                            </tr>
                         }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

