
@{
    ViewBag.Title = "Modificar Horas";
    Layout = "~/Views/Shared/UIProyectoSideMenu.cshtml";
}


<div style="width:100%">
    <div class="container-fluid">
        <div class="row formRow">
            <div class="form-group col-md-12">
                <label for="nombreProyectoInput">Nombre del proyecto</label>
                <input type="text" class="form-control" id="codigoProyectoInput" value="@ViewData["NombreProyecto"]" disabled />
            </div>
        </div>
        <div class="row formRow">
            <div class="form-inline col-md-8">
                <label for="codigoProyectoInput">Código del proyecto</label>
                <input style="margin-left:5px" type="text" class="form-control" value="@ViewData["CodigoProyecto"]" id="codigoProyectoInput" disabled />
            </div>
        </div>
        @using (Html.BeginForm("UICompras", "SeguimientoProyecto", new { codigoProyecto = ViewData["CodigoProyecto"] }, FormMethod.Post))
        {
            <div class="row formRow">
                <div class="form-inline col-md-8">
                    <label for="cedulaInvestigador">Cédula del investigador:</label>
                    <input style="margin-left:5px" type="text" class="form-control" id="cedulaInvestigador" name="cedulaInvestigador" disabled />
                </div>
            </div>
            <div class="row formRow">
                <div class="form-inline col-md-8">
                    <label for="investigador">Investigador</label>
                    <input style="margin-left:5px" type="text" class="form-control" id="investigador" name="investigador" value="xxxxxx" disabled />
                </div>
            </div>

            <div class="row formRow">
                <div class="form-inline col-md-6">
                    <label class="col-xs-5" for="cedulaInvestigador">Fecha inicio:</label>
                    <input style="margin-left:5px" type="date" class="form-control" id="fechaInicio" />
                </div>
                <div class="form-inline col-md-6">
                    <label for="escuelaInvestigador" class="col-xs-5">Fecha finalización:</label>
                    <input style="margin-left:5px" type="date" class="form-control" id="fechaFinalizacion" />
                </div>
            </div>

            <div class="row formRow">
                <div class="form-inline col-md-6">
                    <label for="investigador">Horas asignadas:</label>
                    <input style="margin-left:5px" type="text" class="form-control" id="horasAsignadas" name="horasAsignadas" value="3" />
                </div>
                <div class="form-inline col-md-6">
                    <label for="escuelaInvestigador" class="col-xs-5">Código de plaza:</label>
                    <select class="form-control col-xs-5" id="codigoPlaza" name="codigoPlaza">

                        <option value="VIE">VIE</option>
                        <option value="Alternativa">Alternativa 1</option>
                        <option value="Alternativa">Alternativa 2</option>

                    </select>
                </div>
            </div>

            <div class="row formRow">
                <div class="wrapperBotonAgregar">
                    <button class="botonAgregar" type="submit">Agregar horas</button>
                </div>
            </div>
        }

        <div class="row formRow">
            <div class="form-group col-md-12">
                <label for="areasFrascati"></label>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered disenoTabla" style="table-layout: auto;">
                        <tr id="ROW1">
                            <th>Código de plaza</th>
                            <th>Fecha de inicio</th>
                            <th>Fecha de finalización</th>
                            <th>Horas asignadas</th>
                            <th> </th>
                        </tr>


                        <tr>

                            <th>xxxxx</th>
                            <th>xxxxx</th>
                            <th>xxxxx</th>
                            <th>xxxxx</th>
                            <th> <div> <button class="botonEliminar" type="submit"> Eliminar </button></div></th>

                        </tr>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>