                            <th>Apellido 1</th>
                            <th>Apellido 2</th>
                            <th>Puesto</th>
                            <th>Teléfono</th>
                            <th>Email</th>
                            <th> </th>
                        </tr>

                            @foreach (var colaborador in Model)
