@model Frontend_Modulo_dos_Sistema_de_Proyectos_VIE.Models.Proyecto

@{
    ViewBag.Title = "Datos del proyecto";
    Layout = "~/Views/Shared/ProyectoSideMenu.cshtml";
}

<div style="width:100%">
    <form class="container-fluid">
        <div class="row formRow">
            <div class="form-inline col-md-8">
                <label for="codigoProyectoInput">Código del proyecto</label>
                <input type="text" class="form-control" id="codigoProyectoInput" />
            </div>
            <div class="form-inline col-md-4" ">
                <label for="fechaIngresoInput">Fecha de ingreso</label>
                <input type="date" class="form-control" id="fechaIngresoInput" />
            </div>
        </div>
        <div class="row formRow">
            <div class="form-group col-md-12">
                <label for="nombreProyectoInput">Nombre del proyecto</label>
                <textarea class="form-control fullRowInput" id="nombreProyectoInput" rows="3"></textarea>
            </div>
        </div>
        <div class="row formRow">
            <div class="form-group col-md-12">
                <label for="objGeneralInput">Objetivo General</label>
                <textarea class="form-control fullRowInput" id="objGeneralInput" rows="3"></textarea>
            </div>
        </div>
        <div class="row formRow">
            <div class="form-group col-md-12">
                <label for="obsEspecificosInput">Objetivos Especificos</label>
                <textarea class="form-control fullRowInput" id="obsEspecificosInput" rows="3"></textarea>
            </div>
        </div>
        <div class="row formRow">
            <div class="form-inline col-md-8">
                <label>Estado del proyecto</label>
                <select class="form-control">
                    <option>Activo</option>
                    <option>Inactivo</option>
                </select>
            </div>
            <div class="form-inline col-md-4">
                <label for="numActaVIEInput">Número de acta VIE</label>
                <input type="text" class="form-control" id="numActaVIEInput" />
            </div>
        </div>
        <div class="row formRow">
            <div class="form-inline col-md-8">
                <label>Tipos de proyecto</label>
                <select class="form-control">
                    <option>Investigación</option>
                    <option>Ayuda social</option>
                </select>
            </div>
            <div class="form-inline col-md-4">
                <label for="numActaEscuelaInput">Número de acta escuela</label>
                <input type="text" class="form-control" id="numActaEscuelaInput" />
            </div>
        </div>
        <div class="row formRow">
            <div class="form-inline col-md-8">
                <label>Tipos de proceso</label>
                <select class="form-control">
                    <option>Investigación</option>
                    <option>Ayuda social</option>
                </select>
            </div>
            <div class="form-inline col-md-4">
                <label for="fechaAprobaciónInput">Fecha de aprobación</label>
                <input type="date" class="form-control" id="fechaAprobaciónInput" />
            </div>
        </div>
        <div class="row formRow">
            <div class="form-inline col-md-8">
                <label for="fechaSuspensionInput">Fecha de suspensión</label>
                <input type="date" class="form-control" id="fechaSuspensionInput" />
            </div>
            <div class="form-inline col-md-4">
                <label for="fechaInicioInput">Fecha de inicio</label>
                <input type="date" class="form-control" id="fechaInicioInput" />
            </div>
        </div>
        <div class="row formRow">
            <div class="form-inline col-md-8">
                <label for="oficialProyectoInput">Fecha de suspensión</label>
                <input type="text" class="form-control" id="oficialProyectoInput" />
            </div>
            <div class="form-inline col-md-4">
                <label for="fechaFinalInput">Fecha de inicio</label>
                <input type="date" class="form-control" id="fechaFinalInput" />
            </div>
        </div>
        <div class="row formRow">
            <div class="form-inline col-md-12">
                <label>Modalidad del proyecto</label>
                <select class="form-control">
                    <option>Activo</option>
                    <option>Presencial</option>
                </select>
            </div>
        </div>
    </form>
</div>